<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Controller_Login</servlet-name>
        <servlet-class>controller.Controller_Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Home</servlet-name>
        <servlet-class>controller.Controller_Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Logout</servlet-name>
        <servlet-class>controller.Controller_Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Register</servlet-name>
        <servlet-class>controller.Controller_Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Change_Password</servlet-name>
        <servlet-class>controller.Controller_Change_Password</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Change_Information</servlet-name>
        <servlet-class>controller.Controller_Change_Information</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller_Forgot_Password</servlet-name>
        <servlet-class>controller.Controller_Forgot_Password</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller_Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Change_Password</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Change_Information</servlet-name>
        <url-pattern>/changeinformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Forgot_Password</servlet-name>
        <url-pattern>/forgotpassword</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
