        <url-pattern>/posthouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Messenger</servlet-name>
        <url-pattern>/messenger</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Edit_Blog</servlet-name>
        <url-pattern>/editblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller_Delete_Blog</servlet-name>
        <url-pattern>/deleteblog</url-pattern>
        <servlet-name>HomeAdminController</servlet-name>
        <url-pattern>/admin-home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAccountController</servlet-name>
        <url-pattern>/admin-list-account</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            60
        </session-timeout>
    </session-config>
</web-app>
